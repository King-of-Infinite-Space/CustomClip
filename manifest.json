{
  "name": "Custom Clip",
  "manifest_version": 3,
  "version": "0.5.1",
  "description": "Prototype",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/content.js"]
    }
  ],
  "options_ui": {
    "page": "src/settings.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "256": "icon256.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{64db752b-b1a2-46c9-a7fb-cf4368b745e6}"
    }
  }
}
